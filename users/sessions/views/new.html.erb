<div class="login-wrapper">
	<%%= notice_message(dismissible: true, fixed: true) %>
	<div class="text-center">
		<%%= form_for :session, url: sessions_path, html: { class: "form-signin" } do |f| %>
			<!-- <img class="mb-4" src="" alt="" width="72" height="72"> -->
			
			<h1 class="h3 mb-3 font-weight-normal">鴻妍搏命工作室</h1>
			<%%= f.hidden_field :back_path, value: params[:back_path] %>

			<div class="mb-3">
				<%%= f.label :username, "使用者名稱", class: "visually-hidden" %>
				<%%= f.text_field :username, placeholder: "使用者名稱", class: "form-control", required: true, autofocus: true %>
			</div>

			<div class="mb-3">
				<%%= f.label :password, "密碼", class: "visually-hidden" %>
				<%%= f.password_field :password, placeholder: "密碼", class: "form-control" %>
			</div>

		  	<div class="clear-fix mb-3"></div>
		  	<%%= f.submit "登入", class: "btn btn-lg btn-primary btn-block" %>
		  	<p class="mt-5 mb-3 text-muted">&copy; 2017-<%%= Time.now.strftime("%Y") %></p>
		<%% end %>
	</div>
</div>