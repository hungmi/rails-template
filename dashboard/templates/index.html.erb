<h1 class="h2">
  <%%= <%= class_name.constantize %>.model_name.human %><%%= I18n.t("text.index") %>
  <%#= link_to "more", "#", style: "font-size: 16px; margin-left: 20px;" %>
  <%%= link_to "#<%= singular_table_name %>AdvanceSearch", class: "d-print-none btn btn-link float-right", data: { toggle: "collapse" } do %>
  	<i class="material-icons">&#xE152;</i>
  <%% end %>
</h1>

<div class="w-100 d-print-none mb-4 collapse <%%= 'show' if params[:q].present? %>" id="<%= singular_table_name %>AdvanceSearch">
	<div class="card w-100">
		<div class="card-body">
			<%%= render "filter" %>
		</div>
	</div>
</div>
<div class="mt-3 mb-4 <%%= 'd-none' unless params[:q].present? %>">
	<%%= I18n.t("text.search_result") %>ï¼š<%%= @q.result(distinct: true).size %>
</div>

<%%== pagy_bootstrap_nav(@pagy) %>
<div class="row">
	<%% if not_desktop? %>
  	<%%= render @<%= plural_table_name %> %>
  <%% else %>
  	<%%= render partial: "<%= plural_table_name %>_table", locals: { <%= plural_table_name %>: @<%= plural_table_name %> } %>
  <%% end %>
</div>
<%%== pagy_bootstrap_nav(@pagy) %>

<div class="btn-abs-wrapper">
	<%%= link_to new_<%= options[:namespace] %>_<%= singular_table_name %>_path, class: "btn btn-success btn-icon--circle" do %>
		<i class="material-icons">&#xE145;</i>
	<%% end %>
</div>